<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="360dp"
        android:layout_height="465dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.567"
        app:srcCompat="@drawable/custom_button" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Create an account as\nmedical personnel"
        android:textAlignment="center"
        android:textColor="#31507B"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Create a STECHTOSCOPE account to store\ncheckup informations and use app features"
        android:textAlignment="center"
        android:textColor="#505050"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <Button
        android:id="@+id/button"
        android:layout_width="330dp"
        android:layout_height="68dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Next"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp"
        app:backgroundTint="#31507B"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938" />

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="465dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewNamaLengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Nama"
                android:textColor="#505050"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp" />

            <EditText
                android:id="@+id/editTextNamaLengkap"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/editable_text_column"
                android:hint="Nama Lengkap"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textSize="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="18dp" />

            <TextView
                android:id="@+id/textViewSIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold"
                android:text="Nomor Surat Izin Praktik (SIP)"
                android:textColor="#505050"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="left"/>

            <EditText
                android:id="@+id/editTextSIP"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/editable_text_column"
                android:hint="8 digit angka(?)"
                android:inputType="number"
                android:paddingStart="15dp"
                android:textSize="16dp"
                android:layout_gravity="left"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="18dp"/>

            <TextView
                android:id="@+id/textViewNoTelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Nomor Telepon"
                android:textColor="#505050"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:gravity="right" />

            <EditText
                android:id="@+id/editTextNoTelp"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/editable_text_column"
                android:hint="08XXXXXXXX"
                android:inputType="number"
                android:paddingStart="15dp"
                android:textSize="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="18dp"/>

            <TextView
                android:id="@+id/textViewBirthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Tanggal Lahir"
                android:textColor="#505050"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:gravity="right" />

            <EditText
                android:id="@+id/editTextBirthdate"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/editable_text_column"
                android:hint="DD/MM/YYYY"
                android:inputType="date"
                android:paddingStart="15dp"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Jenis Kelamin"
                android:textColor="#505050"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:gravity="right" />

            <EditText
                android:id="@+id/editTextGender"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/editable_text_column"
                android:hint="L/P"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textSize="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="18dp"/>

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Email"
                android:textColor="#505050"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:gravity="right" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/editable_text_column"
                android:hint="example@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingStart="15dp"
                android:textSize="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="18dp"/>

            <TextView
                android:id="@+id/textViewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Password"
                android:textColor="#505050"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:gravity="right" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/editable_text_column"
                android:hint="Min. 8 characters"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:textSize="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="18dp"/>

            <TextView
                android:id="@+id/textViewRepPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Repeat password"
                android:textColor="#505050"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:gravity="right" />

            <EditText
                android:id="@+id/editTextRepPassword"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/editable_text_column"
                android:hint="Type your password"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:textSize="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="15dp"/>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Already have an account?"
        android:textColor="#505050"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:clickable="true"
        android:fontFamily="@font/inter_bold"
        android:text="Login here"
        android:textColor="#31507B"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.006" />

</androidx.constraintlayout.widget.ConstraintLayout>